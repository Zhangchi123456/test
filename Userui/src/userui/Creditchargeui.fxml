<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="presentationController.CreditChargeController">
   <top>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="信用充值">
               <font>
                  <Font size="40.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </top>
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="113.0">
               <children>
                  <Label text="用户名:">
                     <font>
                        <Font size="25.0" />
                     </font>
                  </Label>
                  <TextField prefHeight="26.0" prefWidth="192.0" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="90.0">
               <children>
                  <Label text="充值金额:">
                     <font>
                        <Font size="25.0" />
                     </font>
                  </Label>
                  <TextField prefHeight="26.0" prefWidth="191.0" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets left="200.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="270.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" text="确认">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
            <Button fx:id="ReturnButton" mnemonicParsing="false" onAction="#ReturnButtonClicked" text="返回">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
         </children>
         <opaqueInsets>
            <Insets right="50.0" />
         </opaqueInsets>
         <padding>
            <Insets right="200.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
