<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="presentationController.CreatorderController">
   <top>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="订单信息填写">
               <font>
                  <Font size="40.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </top>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <VBox prefHeight="458.0" prefWidth="715.0">
               <children>
                  <HBox prefHeight="60.0" prefWidth="800.0">
                     <children>
                        <Label text="             用户名：">
                           <font>
                              <Font size="22.0" />
                           </font>
                        </Label>
                        <TextField fx:id="UserName" />
                     </children>
                  </HBox>
                  <HBox prefHeight="60.0" prefWidth="800.0">
                     <children>
                        <Label text="             人数   ：">
                           <font>
                              <Font size="22.0" />
                           </font>
                        </Label>
                        <TextField fx:id="UserNum" />
                     </children>
                  </HBox>
                  <HBox prefHeight="60.0" prefWidth="800.0">
                     <children>
                        <Label text="             电话   ：">
                           <font>
                              <Font size="22.0" />
                           </font>
                        </Label>
                        <TextField fx:id="TelePhone" />
                     </children>
                  </HBox>
                  <HBox prefHeight="60.0" prefWidth="800.0">
                     <children>
                        <Label text="            房间类型：">
                           <font>
                              <Font size="22.0" />
                           </font>
                        </Label>
                        <ChoiceBox fx:id="RoomType" prefWidth="150.0" />
                     </children>
                  </HBox>
                  <HBox prefHeight="55.0" prefWidth="800.0">
                     <children>
                        <Label text="           有无儿童 ：">
                           <font>
                              <Font size="22.0" />
                           </font>
                        </Label>
                        <ChoiceBox fx:id="Child" prefWidth="150.0" />
                     </children>
                  </HBox>
                  <HBox prefHeight="60.0" prefWidth="800.0">
                     <children>
                        <Label text="            日期  ：">
                           <font>
                              <Font size="22.0" />
                           </font>
                        </Label>
                        <DatePicker fx:id="TimeBegin" />
                        <Label prefHeight="28.0" prefWidth="64.0" text="   ——" />
                        <DatePicker fx:id="TimeEnd" />
                     </children>
                  </HBox>
                  <HBox prefHeight="60.0" prefWidth="800.0" spacing="10.0">
                     <children>
                        <Label prefHeight="67.0" prefWidth="463.0" />
                        <Button id="Return" fx:id="ReturnButton" mnemonicParsing="false" onAction="#ReturnButtonClicked" prefHeight="45.0" prefWidth="94.0" text="返 回">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </Button>
                        <Button id="Sure" fx:id="ConfirmButton" mnemonicParsing="false" onAction="#ConfirmButtonClicked" prefHeight="45.0" prefWidth="93.0" text="确 定">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </Button>
                     </children>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </HBox>
               </children>
               <padding>
                  <Insets top="30.0" />
               </padding>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>
